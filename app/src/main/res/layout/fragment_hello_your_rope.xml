<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_blue_grad"
    tools:context="spajam2017.haggy.yourrope.fragments.HelloYourRopeFragment">

    <ImageView
        android:id="@+id/hello_fragment_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/image_description_hello_image" />

    <TextView
        android:id="@+id/hello_fragment_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:lineSpacingExtra="18sp"
        android:text="@string/hello_text_0"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="24sp" />


    <Button
        android:id="@+id/btn_hello_start"
        style="@android:style/Widget.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/hello_start_button"
        android:fontFamily="sans-serif"
        android:text="@string/btn_hello_start"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="invisible"
        tools:letterSpacing="20dp" />

</RelativeLayout>
